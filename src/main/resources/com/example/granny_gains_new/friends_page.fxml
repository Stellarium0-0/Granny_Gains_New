                    <Label style="-fx-font-weight: bold; -fx-font-size: 20px;" text="Add a New Friend" />
                    <TextField fx:id="AddFriend" promptText="Enter friend's name">
                        <font>
                            <Font size="17.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="AddAge" promptText="Enter friend's age">
                        <font>
                            <Font size="17.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="AddPhoneNumber" promptText="Enter friend's phone no.">
                        <font>
                            <Font size="17.0" />
                        </font>
                    </TextField>
                    <TextField fx:id="AddLikes" promptText="Enter friend's fav workout">
                        <font>
                            <Font size="17.0" />
                        </font>
                    </TextField>
                    <Button fx:id="addFriendButton" onAction="#handleToAddFriend" style="-fx-background-color: #D1FF98; -fx-text-fill: #000000; -fx-border-color: #818589;" text="Confirm" />
                    <Button onAction="#hideInputFields" style="-fx-background-color: #FF6F6F; -fx-text-fill: #FFFFFF;" text="Cancel" />
                </VBox>
                <Circle layoutX="586.0" layoutY="99.0" radius="26.0" stroke="BLACK" strokeType="INSIDE" />
                <Circle layoutX="586.0" layoutY="62.0" radius="18.0" stroke="BLACK" strokeType="INSIDE" />
                <Circle layoutX="640.0" layoutY="80.0" radius="26.0" stroke="BLACK" strokeType="INSIDE" />
                <Circle layoutX="640.0" layoutY="44.0" radius="18.0" stroke="BLACK" strokeType="INSIDE" />
                <Label layoutX="535.0" layoutY="4.0" text="+">
                    <font>
                        <Font size="40.0" />
                    </font>
                </Label>
            </Pane>
        </top>
    </BorderPane>
