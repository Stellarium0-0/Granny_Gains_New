<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.granny_gains_new.GrannyGainsHomeController"
      alignment="TOP_CENTER" spacing="20.0" prefWidth="1200" prefHeight="800"
      style="-fx-background-color: #F0F0F0; -fx-padding: 20;" stylesheets="@styles.css">

    <!-- Top Navigation Bar -->
    <HBox alignment="CENTER_RIGHT" spacing="40.0" style="-fx-padding: 20px; -fx-background-color: #E1E1E1;">
        <Button fx:id="mealsButton" text="Meals" onAction="#handleMeals" styleClass="button" />
        <Label text="FITNESS" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Label text="SETTINGS" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    </HBox>

    <!-- Main Title and Image -->
    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #ffffff; -fx-padding: 50px;">
        <ImageView fx:id="logoImage" fitWidth="400" preserveRatio="true" />
        <Label text="Relax, Refresh, Revitalize" style="-fx-font-size: 30px; -fx-font-family: 'Arial Black';" />
        <Label text="GRANNY GAINS WELLNESS" style="-fx-font-size: 18px; -fx-font-family: 'Arial';" />
        <Button text="View Services" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 16px;" />
    </VBox>

    <!-- Footer Section -->
    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #f2f2f2; -fx-padding: 50px;">
        <Label text="About" style="-fx-font-size: 26px; -fx-font-family: 'Arial Black';" />
        <Label text="Granny Gains" style="-fx-font-size: 20px; -fx-font-family: 'Arial';" />
        <Label text="Helping you stay fit and healthy at any age." wrapText="true" style="-fx-font-size: 14px; -fx-padding: 0 50px;" />
    </VBox>

</VBox>
