<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.granny_gains_new.controller.RecipeDetailController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0">
            <Label fx:id="recipeNameLabel" text="Recipe Name" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <ImageView fx:id="recipeImageView" fitWidth="300" preserveRatio="true" />
            <TextArea fx:id="recipeDescription" prefHeight="300" prefWidth="400" wrapText="true" editable="false" />
            <Button text="Back to Meals" onAction="#handleBackToMeals" />
        </VBox>
    </children>
</AnchorPane>
