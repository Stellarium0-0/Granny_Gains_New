<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.collections.FXCollections?>

<VBox fx:controller="com.example.granny_gains_new.controller.FavouritesPageController" alignment="TOP_CENTER" prefHeight="616.0" prefWidth="1200" spacing="20.0" style="-fx-padding: 20; -fx-background-color: F5F5DC;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER" spacing="20.0">
        <ImageView fx:id="logoImage" fitWidth="100" preserveRatio="true" />
        <Label style="-fx-font-size: 24px;" text="Favourited Meals" />
    </HBox>

    <VBox spacing="20.0">
        <Label style="-fx-font-size: 20px;" text="Fitness" />
        <ListView fx:id="fitnessListView" prefHeight="200.0" prefWidth="600.0">
            <items>
                <FXCollections fx:factory="observableArrayList"/>
            </items>
        </ListView>

        <Label style="-fx-font-size: 20px;" text="Meals" />
        <ListView fx:id="mealsListView" prefHeight="200.0" prefWidth="600.0">
            <items>
                <FXCollections fx:factory="observableArrayList"/>
            </items>
        </ListView>
    </VBox>

    <Button fx:id="backButton" onAction="#handleBackToHome" style="-fx-text-fill: black; -fx-background-color: B3EBF2;" text="Back to Home" />
</VBox>
